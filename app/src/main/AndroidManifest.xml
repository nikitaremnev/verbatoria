            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name="com.verbatoria.presentation.schedule.view.ScheduleActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name="com.verbatoria.presentation.late_send.view.LateSendActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name="com.verbatoria.presentation.session.view.writing.WritingActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme"/>

        <activity
            android:name="com.verbatoria.presentation.session.view.submit.SubmitActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme"/>

        <activity
            android:name="com.verbatoria.presentation.login.view.recovery.RecoveryActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme"/>

        <service
            android:name="com.verbatoria.infrastructure.connection.ConnectionService"
            android:exported="false"/>

    </application>

</manifest>