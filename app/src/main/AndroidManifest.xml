        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MainTheme">

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="67e8efcbe2e007c55247aa119f19c530687ccdab" />

        <activity
            android:name="com.verbatoria.presentation.splash.SplashActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.verbatoria.presentation.login.view.login.LoginActivity"
            android:screenOrientation="sensorLandscape"
            android:theme="@style/FullScreenTheme">
        </activity>

        <activity
            android:name="com.verbatoria.presentation.dashboard.view.DashboardActivity"
            android:screenOrientation="sensorLandscape"
            android:configChanges="locale"
            android:theme="@style/FullScreenTheme"/>

        <activity
            android:name="com.verbatoria.presentation.calendar.view.detail.EventDetailActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name="com.verbatoria.presentation.session.view.connection.ConnectionActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name="com.verbatoria.presentation.session.view.reconnect.ReconnectionActivity"
            android:screenOrientation="sensorLandscape"/>

        <activity
            android:name="com.verbatoria.presentation.calendar.view.add.clients.ClientsActivity"
