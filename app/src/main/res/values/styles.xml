<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorAccent">@color/status_bar</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/status_bar</item>
        <item name="android:typeface">monospace</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="ButtonBorderlessStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:typeface">monospace</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="FullScreenTheme" parent="MainTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">@dimen/custom_peek_height</item>
    </style>

</resources>
