<resources>

    <!-- Base application theme. -->
    <style name="MainTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/status_bar</item>
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryDark">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/status_bar</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:typeface">monospace</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="ButtonBorderlessStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:typeface">monospace</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="MenuItemTheme" parent="MainTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="FullScreenTheme" parent="MainTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MainTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
