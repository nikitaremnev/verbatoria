<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/login_button_disabled_color" />
            <corners android:radius="@dimen/login_button_corner_radius" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/login_button_enabled_color" />
            <corners android:radius="@dimen/login_button_corner_radius" />
        </shape>
    </item>

</selector>