<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/field_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/child_name_text_view"
            android:textSize="@dimen/field_title_size"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/field_title_color"
            android:layout_marginTop="@dimen/client_name_top_margin"
            android:paddingLeft="@dimen/field_title_left_padding"
            android:paddingRight="@dimen/field_title_right_padding"
            tools:text="Привет привет это тестовая херотень" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:id="@+id/child_birthday_text_view"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/field_subtitle_size"
            android:textColor="@color/field_subtitle_color"
            android:paddingTop="@dimen/field_subtitle_top_padding"
            android:paddingLeft="@dimen/field_title_left_padding"
            android:paddingRight="@dimen/field_title_right_padding"
            android:layout_centerVertical="true"
            android:layout_below="@+id/child_name_text_view"
            tools:text="Привет привет это тестовая херотень" />

    </RelativeLayout>

</RelativeLayout>