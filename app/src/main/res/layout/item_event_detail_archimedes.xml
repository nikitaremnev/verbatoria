<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/event_detail_field_min_height"
    android:background="@color/white"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:id="@+id/decorative_block_layout"
        android:layout_width="@dimen/event_detail_decorative_block_width"
        android:layout_height="0dp"
        android:background="@color/main"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_archimedes_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/event_detail_decorative_block_text_margin_top"
            android:textSize="@dimen/event_detail_decorative_block_text_size"
            android:text="@string/arhimedes" />

    </LinearLayout>

    <TextView
        android:id="@+id/archimedes_state_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:drawablePadding="@dimen/event_archimedes_status_logo_padding"
        android:layout_marginStart="@dimen/info_name_margin_horizontal"
        android:layout_marginTop="@dimen/event_detail_client_name_margin_top"
        android:layout_marginEnd="@dimen/event_detail_client_name_margin_horizontal"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/event_detail_client_name_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/decorative_block_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Вербатолог Вербатологов" />

    <View
        android:id="@+id/border_bottom_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/event_detail_client_bottom_border_margin_top"
        android:background="@color/divider_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/decorative_block_layout"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>