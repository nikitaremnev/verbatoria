<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/field_height"
    android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_item_divider_height"
        android:layout_alignParentBottom="true"
        android:background="@color/settings_divider_item_color">
    </View>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="@dimen/edit_text_height"
        android:id="@+id/field_edit_text"
        android:background="@null"
        android:maxLines="1"
        android:maxLength="100"
        android:imeOptions="flagNoExtractUi"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:textColor="@color/field_title_color"
        android:paddingLeft="@dimen/field_title_left_padding"
        android:paddingRight="@dimen/field_title_right_padding"
        android:layout_toLeftOf="@+id/status_image_view"
        android:layout_toRightOf="@+id/field_image_view"
        tools:text="Привет" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/image_view_right_margin"
        android:layout_marginLeft="@dimen/image_view_right_margin"
        app:srcCompat="@drawable/ic_exit"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status_image_view"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/image_view_right_margin"
        android:layout_marginLeft="@dimen/image_view_right_margin"
        app:srcCompat="@drawable/ic_not_ok"
        tools:ignore="ContentDescription" />

</RelativeLayout>