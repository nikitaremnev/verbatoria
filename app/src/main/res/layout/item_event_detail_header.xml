<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/header_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:paddingStart="@dimen/event_detail_header_padding_horizontal"
        android:paddingTop="@dimen/event_detail_header_padding_vertical"
        android:paddingEnd="@dimen/event_detail_header_padding_horizontal"
        android:paddingBottom="@dimen/event_detail_header_padding_vertical"
        android:textColor="@color/event_detail_header_text_color"
        android:textSize="@dimen/event_detail_header_text_size"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/divider_item_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_text_view" />

</android.support.constraint.ConstraintLayout>