<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/verbatolog_info_subtitle_top_padding"
            android:paddingBottom="@dimen/verbatolog_info_subtitle_bottom_padding"
            android:paddingRight="@dimen/verbatolog_info_subtitle_other_padding"
            android:paddingLeft="@dimen/verbatolog_info_subtitle_other_padding"
            android:textSize="@dimen/verbatolog_small_text_size"
            android:text="@string/dashboard_neurometrist" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/hint_press_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/settings_divider_item_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/verbatolog_status_diameter"
                    android:layout_height="@dimen/verbatolog_status_diameter"
                    android:layout_marginTop="@dimen/verbatolog_status_vertical_margin"
                    android:layout_marginLeft="@dimen/verbatolog_status_margin"
                    android:layout_marginRight="@dimen/verbatolog_status_right_margin"
                    android:layout_marginBottom="@dimen/verbatolog_status_vertical_margin"
                    android:id="@+id/verbatolog_status_view"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_text_view"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/verbatolog_big_text_size"
                    tools:text="Вербатолог Вербатологов"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_text_view"
                android:textSize="@dimen/verbatolog_small_text_size"
                android:layout_marginLeft="@dimen/verbatolog_fields_left_margin"
                android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                android:layout_marginTop="-4dp"
                tools:text="+7 (915) 397 46-89"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_text_view"
                android:textSize="@dimen/verbatolog_small_text_size"
                android:layout_marginLeft="@dimen/verbatolog_fields_left_margin"
                android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                android:layout_marginTop="@dimen/verbatolog_fields_top_margin"
                tools:text="test@test.ru"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/archimed_text_view"
                android:textStyle="bold"
                android:textSize="@dimen/verbatolog_small_text_size"
                android:layout_marginLeft="@dimen/verbatolog_fields_left_margin"
                android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                android:layout_marginTop="@dimen/verbatolog_fields_top_margin"
                tools:text="АРХИМЕД доступен"/>

            <View
                android:background="@color/settings_divider_item_color"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/settings_item_divider_height"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/verbatolog_info_subtitle_top_padding"
            android:paddingBottom="@dimen/verbatolog_info_subtitle_bottom_padding"
            android:paddingRight="@dimen/verbatolog_info_subtitle_other_padding"
            android:paddingLeft="@dimen/verbatolog_info_subtitle_other_padding"
            android:textSize="@dimen/verbatolog_small_text_size"
            android:text="@string/dashboard_cabinet" />

        <RelativeLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/settings_divider_item_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/main_dark"
                android:paddingLeft="@dimen/dashboard_horizontal_padding"
                android:textSize="@dimen/location_id_text_size"
                android:id="@+id/location_id_text_view"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                tools:text="32" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_name_text_view"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/location_id_text_view"
                android:layout_marginLeft="@dimen/verbatolog_location_info_left_margin"
                android:layout_marginTop="@dimen/verbatolog_status_margin"
                android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                android:textColor="@color/black"
                android:textSize="@dimen/verbatolog_big_text_size"
                tools:text="Вербатория Остоженка"/>

            <TextView
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:id="@+id/location_address_text_view"
                android:layout_below="@+id/location_name_text_view"
                android:textSize="@dimen/verbatolog_small_text_size"
                android:layout_toRightOf="@+id/location_id_text_view"
                android:layout_marginTop="@dimen/verbatolog_fields_top_margin"
                android:layout_marginLeft="@dimen/verbatolog_location_info_left_margin"
                android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                tools:text="Остоженка 7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location_address_text_view"
                android:id="@+id/location_point_text_view"
                android:textSize="@dimen/verbatolog_small_text_size"
                android:layout_toRightOf="@+id/location_id_text_view"
                android:layout_marginLeft="@dimen/verbatolog_location_info_left_margin"
                android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                android:layout_marginTop="@dimen/verbatolog_fields_top_margin"
                tools:text="Москва, Россия"/>

            <View
                android:background="@color/settings_divider_item_color"
                android:layout_below="@+id/location_point_text_view"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/settings_item_divider_height"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/verbatolog_info_subtitle_top_padding"
            android:paddingBottom="@dimen/verbatolog_info_subtitle_bottom_padding"
            android:paddingRight="@dimen/verbatolog_info_subtitle_other_padding"
            android:paddingLeft="@dimen/verbatolog_info_subtitle_other_padding"
            android:textSize="@dimen/verbatolog_small_text_size"
            android:text="@string/dashboard_partner" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/settings_divider_item_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_item_divider_height"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/partner_name_text_view"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/verbatolog_fields_left_margin"
                    android:layout_marginTop="@dimen/verbatolog_status_margin"
                    android:layout_marginRight="@dimen/verbatolog_fields_right_margin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/verbatolog_big_text_size"
                    tools:text="Вербатория Остоженка"/>

            </LinearLayout>

            <View
                android:background="@color/settings_divider_item_color"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_height="@dimen/settings_item_divider_height"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
