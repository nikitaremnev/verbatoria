<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fields_layout"
            android:orientation="vertical">

            <include android:id="@+id/client_name_field"
                layout="@layout/item_field"/>

            <include android:id="@+id/client_phone_field"
                layout="@layout/item_field"/>

            <include android:id="@+id/client_email_field"
                layout="@layout/item_field"/>

            <include android:id="@+id/client_name_editable_field"
                layout="@layout/item_field_editable"/>

            <include android:id="@+id/client_phone_editable_field"
                layout="@layout/item_field_editable"/>

            <include android:id="@+id/client_email_editable_field"
                layout="@layout/item_field_editable"/>

        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="@dimen/activity_save_button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/event_detail_create_new_event"
            style="@style/ButtonStyle"
            android:layout_below="@+id/fields_layout"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_between_margin"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</ScrollView>