<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_children"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="@dimen/calendar_add_event_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/calendar_activity_between_fields_padding"
        android:id="@+id/child_name_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/image_view_right_margin"
            app:srcCompat="@drawable/ic_child_name"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/child_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/calendar_add_edit_text_height"
            android:ems="10"
            android:hint="@string/calendar_activity_add_child_name"
            android:inputType="text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/child_name_layout"
        android:layout_marginBottom="@dimen/calendar_activity_between_fields_padding"
        android:id="@+id/birthday_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/image_view_right_margin"
            app:srcCompat="@drawable/ic_child_birthday"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/birthday_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/calendar_add_edit_text_height"
            android:ems="10"
            android:hint="@string/calendar_activity_add_child_birthday"
            android:inputType="date"/>

    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="@dimen/activity_save_button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/calendar_activity_add_child_create"
        style="@style/ButtonStyle"
        android:layout_below="@+id/birthday_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <include layout="@layout/view_loading"
        android:visibility="gone"/>

</RelativeLayout>
