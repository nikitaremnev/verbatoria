<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <include
        layout="@layout/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.verbatoria.ui.common.adaptivetablelayout.AdaptiveTableLayout
        android:id="@+id/schedule_adaptive_table_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:fixedHeaders="true"
        app:cellMargin="@dimen/schedule_cells_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:solidRowHeaders="true" />

    <ProgressBar
        android:id="@+id/schedule_progress_bar"
        android:layout_width="@dimen/schedule_progress_bar_size"
        android:layout_height="@dimen/schedule_progress_bar_size"
        android:visibility="gone"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

</android.support.constraint.ConstraintLayout>
