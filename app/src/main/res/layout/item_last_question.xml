<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/submit_question_title_top_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/session_last_question"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/question_text_view" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/question_text_view"
        android:layout_marginLeft="@dimen/submit_question_answers_horizontal_margin"
        android:layout_marginRight="@dimen/submit_question_answers_horizontal_margin"
        android:layout_marginTop="@dimen/submit_question_answers_top_margin"
        android:layout_marginBottom="@dimen/submit_question_has_answer_vertical_margin">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/yes"
            android:textSize="@dimen/submit_question_answer_text_size"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/submit_last_question_answer_margin"
            android:background="@drawable/background_button_unselected"
            android:layout_weight="1"
            android:id="@+id/answer_yes"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:text="@string/no"
            android:textSize="@dimen/submit_question_answer_text_size"
            android:layout_marginLeft="@dimen/submit_last_question_answer_margin"
            android:textColor="@color/white"
            android:background="@drawable/background_button_unselected"
            android:layout_weight="1"
            android:id="@+id/answer_no"/>

    </LinearLayout>


</RelativeLayout>