<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/dialog_progress_width"
    android:minHeight="@dimen/dialog_progress_height">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/dialog_progress_bar_size"
        android:layout_height="@dimen/dialog_progress_bar_size"
        app:layout_constraintBottom_toTopOf="@id/please_wait_loading_text_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/please_wait_loading_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_progress_text_margin_top"
        android:gravity="center"
        android:text="@string/loading_please_wait"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_progress_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        app:layout_constraintVertical_chainStyle="packed" />

</android.support.constraint.ConstraintLayout>