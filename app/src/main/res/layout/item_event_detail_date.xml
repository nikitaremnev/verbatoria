<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:id="@+id/decorative_block_layout"
        android:layout_width="@dimen/event_detail_decorative_block_width"
        android:layout_height="0dp"
        android:background="@color/main"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/event_detail_decorative_block_text_margin_top"
            android:textSize="@dimen/event_detail_decorative_block_text_size"
            android:text="@string/time" />

    </LinearLayout>

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/event_detail_date_margin_horizontal"
        android:layout_marginTop="@dimen/event_detail_date_margin_top"
        android:layout_marginEnd="@dimen/event_detail_date_margin_horizontal"
        android:drawableStart="@drawable/ic_timer"
        android:drawablePadding="@dimen/event_period_logo_padding"
        android:gravity="center_vertical"
        android:textColor="@color/main_dark"
        android:textSize="@dimen/event_detail_item_hint_text_size"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/decorative_block_layout"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="24.07 14:00 - 15:00" />

    <TextView
        android:id="@+id/hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/event_detail_date_margin_horizontal"
        android:layout_marginTop="@dimen/event_detail_date_margin_top"
        android:layout_marginEnd="@dimen/event_detail_date_margin_horizontal"
        android:drawableStart="@drawable/ic_not_ok"
        android:drawablePadding="@dimen/event_detail_item_hint_logo_padding"
        android:gravity="center_vertical"
        android:textColor="@color/red"
        android:textSize="@dimen/event_detail_item_hint_text_size"
        android:text="@string/event_detail_date_hint"
        app:layout_constraintLeft_toRightOf="@+id/decorative_block_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border_bottom_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/event_detail_child_bottom_border_margin_top"
        android:background="@color/divider_item_color"
        app:layout_constraintLeft_toRightOf="@+id/decorative_block_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_text_view" />

</android.support.constraint.ConstraintLayout>