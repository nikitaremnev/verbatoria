<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:animateLayoutChanges="true"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_logo_height"
        android:id="@+id/logo_image_view"
        android:scaleType="centerInside"
        android:src="@mipmap/logo_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_logo_vertical_margin"
        android:layout_marginBottom="@dimen/activity_login_logo_vertical_margin"
        android:layout_marginRight="@dimen/activity_login_logo_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_login_logo_horizontal_margin"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/fields_layout"
        android:layout_marginRight="@dimen/activity_login_text_view_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_login_text_view_horizontal_margin"
        android:layout_below="@+id/logo_image_view"
        android:animateLayoutChanges="true">

        <EditText
            android:layout_width="@dimen/activity_login_edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:imeOptions="flagNoExtractUi"
            android:id="@+id/phone_edit_text"
            android:inputType="phone"
            android:layout_marginBottom="@dimen/activity_login_text_view_middle_vertical_margin"
            android:hint="@string/login_phone_hint"/>

        <EditText
            android:layout_width="@dimen/activity_login_edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:imeOptions="flagNoExtractUi"
            android:id="@+id/code_edit_text"
            android:visibility="gone"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:hint="@string/recovery_password_confirm_code"/>

        <EditText
            android:layout_width="@dimen/activity_login_edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:imeOptions="flagNoExtractUi"
            android:id="@+id/new_password_edit_text"
            android:visibility="gone"
            android:inputType="textPassword"
            android:hint="@string/recovery_new_password"
            />

        <EditText
            android:layout_width="@dimen/activity_login_edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:imeOptions="flagNoExtractUi"
            android:visibility="gone"
            android:id="@+id/new_password_confirm_edit_text"
            android:inputType="textPassword"
            android:hint="@string/recovery_new_password_confirm"/>

    </LinearLayout>

    <Button
        android:layout_width="@dimen/activity_recovery_button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/submit_button"
        android:text="@string/recovery_send_code"
        android:layout_below="@+id/fields_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_button_vertical_margin"
        android:layout_marginRight="@dimen/activity_login_button_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_login_button_horizontal_margin"
        style="@style/ButtonStyle"/>

    <TextView
        android:id="@+id/remember_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_login_recovery_password_padding"
        android:textColor="@color/main_dark"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:text="@string/recovery_remember_password"
        android:layout_below="@+id/submit_button"
        android:layout_centerHorizontal="true" />

    <include layout="@layout/view_loading"
        android:visibility="gone" />

</RelativeLayout>
