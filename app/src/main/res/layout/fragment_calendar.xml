<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verbatoria.presentation.dashboard.view.calendar.CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/events_text_view"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingLeft="@dimen/dashboard_horizontal_padding"
            android:paddingRight="@dimen/dashboard_horizontal_padding"
            android:paddingTop="@dimen/dashboard_padding"
            android:layout_marginBottom="@dimen/verbatolog_between_info_and_events_margin"
            android:text="@string/dashboard_events_title"/>

        <include layout="@layout/fragment_verbatolog_events"
            android:id="@+id/events_recycler_view"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_events_text_view"
        android:visibility="visible"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/dashboard_horizontal_padding"
        android:paddingRight="@dimen/dashboard_horizontal_padding"
        android:text="@string/dashboard_no_events_title"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/calendar_add_event_margin"
        android:id="@+id/add_event_button"
        app:srcCompat="@drawable/ic_calendar_add_event" />

</FrameLayout>
