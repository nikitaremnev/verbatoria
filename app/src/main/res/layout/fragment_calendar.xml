<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verbatoria.presentation.calendar.view.CalendarFragment">

    <include layout="@layout/fragment_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/events_recycler_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_events_text_view"
        android:visibility="visible"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/dashboard_horizontal_padding"
        android:paddingRight="@dimen/dashboard_horizontal_padding"
        android:text="@string/dashboard_no_events_title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/calendar_selected_date_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calendar_fab_margin"
            android:background="@drawable/selected_date_background"
            android:id="@+id/current_date_text_view"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="10.10.2016" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/calendar_fab_margin"
                android:layout_marginRight="@dimen/calendar_fab_margin"
                android:layout_marginBottom="@dimen/calendar_fab_between_margin"
                android:id="@+id/yesterday_date_button"
                app:fabSize="auto"
                app:srcCompat="@drawable/ic_calendar_minus" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/calendar_fab_margin"
                android:layout_marginRight="@dimen/calendar_fab_margin"
                android:layout_marginBottom="@dimen/calendar_fab_between_margin"
                android:id="@+id/tomorrow_date_button"
                app:fabSize="auto"
                app:srcCompat="@drawable/ic_calendar_plus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/calendar_fab_margin"
                android:layout_marginRight="@dimen/calendar_fab_margin"
                android:layout_marginTop="@dimen/calendar_fab_between_margin"
                android:layout_marginBottom="@dimen/calendar_fab_bottom_margin"
                android:id="@+id/select_date_button"
                app:fabSize="auto"
                app:srcCompat="@drawable/ic_calendar" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/calendar_fab_margin"
                android:layout_marginRight="@dimen/calendar_fab_margin"
                android:layout_marginTop="@dimen/calendar_fab_between_margin"
                android:layout_marginBottom="@dimen/calendar_fab_bottom_margin"
                android:id="@+id/add_event_button"
                app:fabSize="auto"
                app:srcCompat="@drawable/ic_calendar_add_event" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
