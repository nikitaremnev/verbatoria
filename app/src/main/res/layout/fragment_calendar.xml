<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verbatoria.presentation.calendar.view.CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/calendar_back_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_calendar_button_height"
                app:srcCompat="@drawable/ic_arrow_left"
                style="@style/ButtonBorderlessStyle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/events_text_view"
                android:visibility="visible"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/dashboard_events_title"/>

            <ImageView
                android:id="@+id/calendar_forward_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_calendar_button_height"
                app:srcCompat="@drawable/ic_arrow_right"
                style="@style/ButtonBorderlessStyle"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_calendar_button_height"
                android:id="@+id/today_button"
                android:text="@string/hello_blank_fragment"
                style="@style/ButtonBorderlessStyle"
                />

            <ImageView
                android:id="@+id/calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/fragment_calendar_button_height"
                app:srcCompat="@drawable/ic_calendar"
                style="@style/ButtonBorderlessStyle"/>

        </LinearLayout>

        <include layout="@layout/fragment_verbatolog_events"
            android:id="@+id/events_recycler_view"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/no_events_text_view"
        android:visibility="visible"
        android:gravity="center"
        android:layout_gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingLeft="@dimen/dashboard_horizontal_padding"
        android:paddingRight="@dimen/dashboard_horizontal_padding"
        android:text="@string/dashboard_no_events_title"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/calendar_add_event_margin"
        android:id="@+id/add_event_button"
        app:srcCompat="@drawable/ic_calendar_add_event" />

</FrameLayout>
