<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/child_padding_bottom">

        <include
            layout="@layout/toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/child_name_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:paddingStart="@dimen/child_header_padding_horizontal"
            android:paddingTop="@dimen/child_header_padding_vertical"
            android:paddingEnd="@dimen/child_header_padding_horizontal"
            android:paddingBottom="@dimen/child_header_padding_vertical"
            android:text="@string/child_name_header_title"
            android:textColor="@color/child_header_text_color"
            android:textSize="@dimen/child_header_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

        <View
            android:id="@+id/border_name_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_item_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_name_header_text_view" />

        <EditText
            android:id="@+id/child_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/child_field_height"
            android:background="@drawable/background_child_field"
            android:hint="@string/child_name_field_hint"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textCapWords"
            android:paddingStart="@dimen/child_field_padding"
            android:paddingTop="@dimen/child_field_padding"
            android:paddingEnd="@dimen/child_field_padding_right"
            android:paddingBottom="@dimen/child_field_padding"
            android:textColor="@color/child_field_text_color"
            android:textSize="@dimen/child_field_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_name_bottom_view"/>

        <View
            android:id="@+id/border_name_field_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_item_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_name_edit_text" />

        <TextView
            android:id="@+id/child_gender_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:paddingStart="@dimen/child_header_padding_horizontal"
            android:paddingTop="@dimen/child_header_padding_vertical"
            android:paddingEnd="@dimen/child_header_padding_horizontal"
            android:paddingBottom="@dimen/child_header_padding_vertical"
            android:text="@string/child_gender_header_title"
            android:textColor="@color/child_header_text_color"
            android:textSize="@dimen/child_header_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_name_field_bottom_view" />

        <View
            android:id="@+id/border_gender_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_item_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_gender_header_text_view" />

        <EditText
            android:id="@+id/child_gender_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/child_field_height"
            android:background="@drawable/background_child_field"
            android:hint="@string/child_birthday_field_hint"
            android:imeOptions="flagNoExtractUi"
            android:inputType="phone"
            android:paddingStart="@dimen/child_field_padding"
            android:paddingTop="@dimen/child_field_padding"
            android:paddingEnd="@dimen/child_field_padding_right"
            android:paddingBottom="@dimen/child_field_padding"
            android:textColor="@color/child_field_text_color"
            android:textSize="@dimen/child_field_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_gender_bottom_view"/>

        <View
            android:id="@+id/border_gender_field_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_item_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_gender_edit_text" />

        <TextView
            android:id="@+id/child_birthday_header_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main"
            android:paddingStart="@dimen/child_header_padding_horizontal"
            android:paddingTop="@dimen/child_header_padding_vertical"
            android:paddingEnd="@dimen/child_header_padding_horizontal"
            android:paddingBottom="@dimen/child_header_padding_vertical"
            android:text="@string/child_birthday_header_title"
            android:textColor="@color/child_header_text_color"
            android:textSize="@dimen/child_header_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_gender_field_bottom_view" />

        <View
            android:id="@+id/border_birthday_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_item_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_birthday_header_text_view" />

        <EditText
            android:id="@+id/child_birthday_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/child_field_height"
            android:background="@drawable/background_child_field"
            android:hint="@string/child_birthday_field_hint"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/child_field_padding"
            android:paddingTop="@dimen/child_field_padding"
            android:paddingEnd="@dimen/child_field_padding_right"
            android:paddingBottom="@dimen/child_field_padding"
            android:textColor="@color/child_field_text_color"
            android:textSize="@dimen/child_field_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_birthday_bottom_view"/>

        <View
            android:id="@+id/border_birthday_field_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider_item_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_birthday_edit_text" />

        <Button
            android:id="@+id/save_button"
            style="@style/ButtonStyle"
            android:layout_width="@dimen/child_submit_button_width"
            android:layout_height="@dimen/child_submit_button_height"
            android:layout_margin="@dimen/child_submit_button_margin"
            android:background="@drawable/selector_common_button"
            android:enabled="false"
            android:text="@string/save"
            android:textColor="@drawable/selector_common_button_text"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/border_birthday_field_bottom_view" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/save_button"
            app:layout_constraintBottom_toBottomOf="@+id/save_button"
            app:layout_constraintRight_toRightOf="@+id/save_button"
            app:layout_constraintTop_toTopOf="@+id/save_button" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>