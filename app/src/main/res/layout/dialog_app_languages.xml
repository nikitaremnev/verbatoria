<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/settings_item_locale"
        android:textColor="@color/settings_dialog_title_text_color"
        android:textSize="@dimen/settings_dialog_title_text_size"
        android:layout_marginBottom="@dimen/settings_dialog_title_margin_bottom"
        android:layout_marginTop="@dimen/settings_dialog_title_margin_top"
        android:layout_marginStart="@dimen/settings_dialog_margin_start" />

    <LinearLayout
        android:id="@+id/russian_language_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_selectable_item_height"
        android:paddingStart="@dimen/settings_dialog_margin_start"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_selectable_item_logo_margin_left"
            android:src="@drawable/ic_flag_ru" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_selectable_item_text_margin_left"
            android:text="@string/language_russian"
            android:textColor="@color/dialog_selectable_item_text_color"
            android:textSize="@dimen/dialog_selectable_item_text_size" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/english_language_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_selectable_item_height"
        android:paddingStart="@dimen/settings_dialog_margin_start"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_selectable_item_logo_margin_left"
            android:src="@drawable/ic_flag_uk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_selectable_item_text_margin_left"
            android:text="@string/language_english"
            android:textColor="@color/dialog_selectable_item_text_color"
            android:textSize="@dimen/dialog_selectable_item_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hong_kong_language_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_selectable_item_height"
        android:paddingStart="@dimen/settings_dialog_margin_start"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_selectable_item_logo_margin_left"
            android:src="@drawable/ic_flag_hk" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dialog_selectable_item_text_margin_left"
            android:text="@string/language_hong_kong"
            android:textColor="@color/dialog_selectable_item_text_color"
            android:textSize="@dimen/dialog_selectable_item_text_size" />

    </LinearLayout>

</LinearLayout>