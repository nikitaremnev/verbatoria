<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/font">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/logo_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_logo_height"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/login_logo_bottom_margin"
        android:scaleType="centerInside"
        android:src="@mipmap/logo_splash"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/phone_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/phone_edit_text"
        android:layout_width="@dimen/login_field_width"
        android:layout_height="@dimen/login_field_height"
        android:background="@drawable/background_login_field"
        android:hint="@string/login_phone_hint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:paddingStart="@dimen/login_field_padding"
        android:paddingTop="@dimen/login_field_padding"
        android:paddingEnd="@dimen/login_field_padding_right"
        android:paddingBottom="@dimen/login_field_padding"
        android:textColor="@color/login_field_text_color"
        android:textSize="@dimen/login_field_text_size"
        app:layout_constraintBottom_toTopOf="@+id/password_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/phone_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/login_fields_clear_button_padding_horizontal"
        android:paddingRight="@dimen/login_fields_clear_button_padding_horizontal"
        android:src="@drawable/ic_login_clear_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/phone_edit_text"
        app:layout_constraintRight_toRightOf="@+id/phone_edit_text"
        app:layout_constraintTop_toTopOf="@+id/phone_edit_text" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="@dimen/login_field_width"
        android:layout_height="@dimen/login_field_height"
        android:layout_marginTop="@dimen/login_fields_between_margin"
        android:background="@drawable/background_login_field"
        android:hint="@string/login_password_hint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPassword"
        android:paddingStart="@dimen/login_field_padding"
        android:paddingTop="@dimen/login_field_padding"
        android:paddingEnd="@dimen/login_field_padding_right"
        android:paddingBottom="@dimen/login_field_padding"
        android:textColor="@color/login_field_text_color"
        android:textSize="@dimen/login_field_text_size"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_edit_text"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/password_clear_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="?selectableItemBackgroundBorderless"
        android:paddingLeft="@dimen/login_fields_clear_button_padding_horizontal"
        android:paddingRight="@dimen/login_fields_clear_button_padding_horizontal"
        android:src="@drawable/ic_login_clear_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/password_edit_text"
        app:layout_constraintRight_toRightOf="@+id/password_edit_text"
        app:layout_constraintTop_toTopOf="@+id/password_edit_text" />

    <Button
        android:id="@+id/login_button"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/login_field_width"
        android:layout_height="@dimen/login_field_height"
        android:layout_marginTop="@dimen/login_button_top_margin"
        android:background="@drawable/selector_login_button"
        android:enabled="false"
        android:text="@string/login_submit"
        android:textColor="@drawable/selector_login_button_text"
        app:layout_constraintBottom_toTopOf="@+id/forgot_password_text_view"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        app:layout_constraintVertical_chainStyle="packed" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/login_button" />

    <TextView
        android:id="@+id/forgot_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/login_forgot_password_top_margin"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/login_forgot_password_padding"
        android:text="@string/login_forgot_password"
        android:textColor="@color/main_dark"
        app:layout_constraintBottom_toTopOf="@+id/country_container_layout"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button"
        app:layout_constraintVertical_chainStyle="packed" />

    <LinearLayout
        android:id="@+id/country_container_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/login_country_container_margin"
        android:background="?selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/login_country_container_padding"
        android:animateLayoutChanges="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_password_text_view"
        app:layout_constraintVertical_chainStyle="packed">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/country_flag_image_view"
            android:layout_width="@dimen/login_country_flag_width"
            android:layout_height="@dimen/login_country_flag_height"
            app:srcCompat="@drawable/ic_flag_ru" />

        <TextView
            android:id="@+id/country_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/login_country_text_margin_horizontal"
            android:layout_marginEnd="@dimen/login_country_text_margin_horizontal"
            android:text="@string/country_russia" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>