<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_logo_height"
        android:id="@+id/logo_image_view"
        android:scaleType="centerInside"
        android:src="@mipmap/logo_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_login_logo_vertical_margin"
        tools:ignore="ContentDescription" />

    <Spinner
        android:layout_width="@dimen/activity_login_spinner_width"
        android:layout_height="@dimen/edit_text_height"
        android:visibility="gone"
        android:layout_below="@+id/logo_image_view"
        android:layout_marginLeft="@dimen/activity_login_text_view_horizontal_margin"
        android:layout_toLeftOf="@+id/login_edit_text"
        android:id="@+id/country_code_spinner">
    </Spinner>

    <EditText
        android:layout_width="@dimen/activity_login_edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:imeOptions="flagNoExtractUi"
        android:id="@+id/login_edit_text"
        android:inputType="phone"
        android:layout_marginBottom="@dimen/activity_login_text_view_middle_vertical_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo_image_view"
        android:hint="@string/login_phone_hint"/>

    <EditText
        android:layout_width="@dimen/activity_login_edit_text_width"
        android:layout_height="@dimen/edit_text_height"
        android:imeOptions="flagNoExtractUi"
        android:id="@+id/password_edit_text"
        android:inputType="textPassword"
        android:hint="@string/login_password_hint"
        android:layout_below="@+id/login_edit_text"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="@dimen/activity_login_button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/login_button"
        android:text="@string/login_submit"
        android:layout_below="@+id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_button_vertical_margin"
        style="@style/ButtonStyle"/>

    <TextView
        android:id="@+id/recovery_password_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_login_recovery_password_padding"
        android:layout_below="@+id/login_button"
        android:textColor="@color/main_dark"
        android:layout_centerHorizontal="true"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:text="@string/login_forgot_password"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/country_selection_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/recovery_password_text_view"
        android:padding="@dimen/activity_login_country_padding"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="?selectableItemBackground">

        <ImageView
            android:layout_width="@dimen/activity_login_country_flag_width"
            android:layout_height="@dimen/activity_login_country_flag_height"
            android:id="@+id/image_view_flag"
            android:src="@drawable/ic_flag_ru"/>

        <TextView
            android:id="@+id/text_view_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="@string/country_russia" />

    </LinearLayout>


</RelativeLayout>
