<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/font">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/logo_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_login_logo_height"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:src="@mipmap/logo_splash"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/login_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/login_edit_text"
        android:layout_width="@dimen/login_field_width"
        android:layout_height="@dimen/login_field_height"
        android:layout_marginTop="@dimen/login_fields_top_margin"
        android:background="@drawable/background_login_field"
        android:hint="@string/login_phone_hint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:padding="@dimen/login_field_padding"
        android:textColor="@color/login_field_text_color"
        android:textSize="@dimen/login_field_text_size"
        app:layout_constraintBottom_toTopOf="@+id/password_edit_text"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_image_view"
        app:layout_constraintVertical_chainStyle="packed" />

    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="@dimen/login_field_width"
        android:layout_height="@dimen/login_field_height"
        android:layout_marginTop="@dimen/login_fields_between_margin"
        android:background="@drawable/background_login_field"
        android:hint="@string/login_password_hint"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textPassword"
        android:padding="@dimen/login_field_padding"
        android:textColor="@color/login_field_text_color"
        android:textSize="@dimen/login_field_text_size"
        app:layout_constraintBottom_toTopOf="@+id/login_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_edit_text"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/login_button"
        style="@style/ButtonStyle"
        android:layout_width="@dimen/login_field_width"
        android:layout_height="@dimen/login_field_height"
        android:layout_marginTop="@dimen/login_button_top_margin"
        android:background="@drawable/background_login_button"
        android:text="@string/login_submit"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text"
        app:layout_constraintVertical_chainStyle="packed" />

</android.support.constraint.ConstraintLayout>


