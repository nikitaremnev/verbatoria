<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?selectableItemBackground">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/info_name_margin_horizontal"
        android:layout_marginTop="@dimen/event_detail_client_name_margin_top"
        android:layout_marginEnd="@dimen/event_detail_client_name_margin_horizontal"
        android:textColor="@color/black"
        android:textSize="@dimen/event_detail_client_name_text_size"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Вербатолог Вербатологов" />

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/event_detail_client_phone_margin_top"
        android:textSize="@dimen/event_detail_client_phone_text_size"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view"
        tools:text="+7 (915) 397 46-89" />

    <TextView
        android:id="@+id/hint_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/info_name_margin_horizontal"
        android:layout_marginTop="@dimen/event_detail_client_name_margin_top"
        android:layout_marginEnd="@dimen/event_detail_client_name_margin_horizontal"
        android:drawableStart="@drawable/ic_not_ok"
        android:drawablePadding="@dimen/event_detail_item_hint_logo_padding"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:textColor="@color/red"
        android:textSize="@dimen/event_detail_item_hint_text_size"
        android:text="@string/event_detail_client_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_marginStart="@dimen/event_detail_client_progress_bar_margin_start"
        android:layout_width="@dimen/event_detail_client_progress_bar_size"
        android:layout_height="@dimen/event_detail_client_progress_bar_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/border_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:layout_marginTop="@dimen/event_detail_client_bottom_border_margin_top"
        android:background="@color/divider_item_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_text_view" />

</android.support.constraint.ConstraintLayout>