<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingLeft="@dimen/writing_horizontal_padding"
    android:paddingTop="@dimen/writing_vertical_padding"
    android:paddingRight="@dimen/writing_horizontal_padding"
    android:paddingBottom="@dimen/writing_vertical_padding">

    <Button
        android:id="@+id/code_99_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_99"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/code_11_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_11"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_99_button" />

    <Button
        android:id="@+id/code_21_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_21"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_11_button" />

    <Button
        android:id="@+id/code_31_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_31"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_21_button" />

    <Button
        android:id="@+id/code_41_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_41"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_31_button" />

    <Button
        android:id="@+id/code_51_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_51"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_41_button" />

    <Button
        android:id="@+id/code_61_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_61"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_51_button" />

    <Button
        android:id="@+id/code_71_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/writing_code_button_height"
        android:text="@string/session_writing_load_71"
        android:textColor="@color/white"
        android:textSize="@dimen/writing_load_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/code_61_button" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/writing_graph_top_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/code_11_button" />


    <LinearLayout
        android:id="@+id/player_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/music_file_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/writing_player_file_name_margin"
            android:textSize="@dimen/writing_player_file_name_text_size" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/play_floating_button"
            android:layout_width="@dimen/writing_player_button_size"
            android:layout_height="@dimen/writing_player_button_size"
            android:layout_margin="@dimen/writing_player_button_margin"
            android:visibility="visible"
            app:backgroundTint="@color/main"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_play" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/pause_floating_button"
            android:layout_width="@dimen/writing_player_button_size"
            android:layout_height="@dimen/writing_player_button_size"
            android:layout_margin="@dimen/writing_player_button_margin"
            android:visibility="gone"
            app:backgroundTint="@color/yellow"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_pause" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/stop_floating_button"
            android:layout_width="@dimen/writing_player_button_size"
            android:layout_height="@dimen/writing_player_button_size"
            android:layout_margin="@dimen/writing_player_button_margin"
            android:visibility="gone"
            app:backgroundTint="@color/red"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_stop" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/back_floating_button"
            android:layout_width="@dimen/writing_player_button_size"
            android:layout_height="@dimen/writing_player_button_size"
            android:layout_margin="@dimen/writing_player_button_margin"
            app:backgroundTint="@color/back"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_back" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/next_floating_button"
            android:layout_width="@dimen/writing_player_button_size"
            android:layout_height="@dimen/writing_player_button_size"
            android:layout_margin="@dimen/writing_player_button_margin"
            app:backgroundTint="@color/next"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_next" />

    </LinearLayout>


    <TextView
        android:id="@+id/timer_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/writing_timer_bottom_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/writing_timer_text_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/finish_button"
        android:layout_width="@dimen/writing_finish_button_size"
        android:layout_height="@dimen/writing_finish_button_size"
        android:layout_marginBottom="@dimen/writing_finish_button_margin"
        android:visibility="visible"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/timer_text_view"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_finish" />

</android.support.constraint.ConstraintLayout>
