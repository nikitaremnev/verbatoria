<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
        android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
        android:paddingTop="@dimen/verbatolog_event_top_vertical_padding"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:id="@+id/child_name_text_view"
        tools:text="Ivan Pupkin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
        android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
        android:paddingTop="@dimen/verbatolog_event_between_vertical_padding"
        android:paddingBottom="@dimen/verbatolog_event_between_vertical_padding"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@+id/child_name_text_view"
        android:id="@+id/age_text_view"
        tools:text="Full age: 18 years"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
        android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
        android:paddingBottom="@dimen/verbatolog_event_bottom_vertical_padding"
        android:layout_below="@+id/age_text_view"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_logo_image_view"
            app:srcCompat="@drawable/ic_timer"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/verbatolog_event_between_horizontal_padding"
            android:textColor="@color/main_dark"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/time_period_text_view"
            tools:text="24.07 14:00 - 15:00" />

    </LinearLayout>

</RelativeLayout>