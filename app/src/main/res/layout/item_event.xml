<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical"
            android:id="@+id/report_container">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/calendar_report_status_size"
                android:layout_height="@dimen/calendar_report_status_size"
                android:id="@+id/report_status_image_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                app:srcCompat="@drawable/ic_report_ready_large" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/report_status_text_view"
                android:text="Отправлен"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/calendar_report_id_text_size"
                android:layout_below="@+id/report_status_image_view" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/report_container"
            android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingTop="@dimen/verbatolog_event_top_vertical_padding"
            android:textColor="@color/black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:id="@+id/child_name_text_view"
            tools:text="Ivan Pupkin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/report_container"
            android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingTop="@dimen/verbatolog_event_between_vertical_padding"
            android:textColor="@color/black"
            tools:text="43-20171094-32"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/child_name_text_view"
            android:id="@+id/age_text_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/report_container"
            android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingTop="@dimen/verbatolog_event_between_vertical_padding"
            android:paddingBottom="@dimen/verbatolog_event_between_vertical_padding"
            tools:text="43-20171094-32"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/age_text_view"
            android:id="@+id/report_id_text_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/report_container"
            android:paddingTop="@dimen/verbatolog_event_time_top_vertical_padding"
            android:paddingLeft="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingRight="@dimen/verbatolog_event_name_horizontal_padding"
            android:paddingBottom="@dimen/verbatolog_event_bottom_vertical_padding"
            android:layout_below="@+id/report_id_text_view"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_timer"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/verbatolog_event_between_horizontal_padding"
                android:textColor="@color/main_dark"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/time_period_text_view"
                tools:text="24.07 14:00 - 15:00" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>